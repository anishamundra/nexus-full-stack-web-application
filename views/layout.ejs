    <main class="main" role="main">
        <div class="container">
            <% if (typeof body !=='undefined' ) { %>
                <%- body %>
                    <% } else { %>
                        <h1>Error: No content to display</h1>
                        <% } %>
        </div>
    </main>

    <footer class="footer" role="contentinfo">
        <div class="container">
