<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation - Nexus Market</title>
    <meta name="description" content="Your order confirmation from Nexus Market">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include('partials/header') %>

        <main class="main" role="main">
            <div class="container">
                <section class="order-confirmation" aria-labelledby="order-heading">
                    <header class="order-header">
                        <div class="order-success-icon">âœ…</div>
                        <h2 id="order-heading">Order Confirmed!</h2>
                        <p class="order-subtitle">Thank you for your purchase</p>
                        <div class="order-id">Order #: <strong>
                                <%= order._id %>
                            </strong></div>
                        <p class="order-date">Order Date: <%= order.createdAt.toLocaleDateString('en-US', {
                                year: 'numeric' , month: 'long' , day: 'numeric' , hour: '2-digit' , minute: '2-digit'
                                }) %>
                        </p>
                    </header>

                    <div class="order-content">
                        <div class="order-items-section">
                            <h3>Items Ordered</h3>
                            <div class="order-items">
                                <% order.items.forEach(item=> { %>
                                    <div class="order-item">
                                        <div class="item-image">
                                            <img src="<%= item.imageUrl || '/images/placeholder.jpg' %>"
                                                alt="<%= item.name %>">
                                        </div>
                                        <div class="item-details">
                                            <h4 class="item-name">
                                                <%= item.name %>
                                            </h4>
                                            <p class="item-quantity">Quantity: <%= item.qty %>
                                            </p>
                                            <p class="item-price">$<%= item.priceAtPurchase.toFixed(2) %> each</p>
                                        </div>
                                        <div class="item-total">
                                            $<%= (item.priceAtPurchase * item.qty).toFixed(2) %>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                        </div>

                        <div class="order-summary-section">
                            <div class="summary-card">
                                <h3>Order Summary</h3>

                                <div class="summary-line">
                                    <span>Subtotal:</span>
                                    <span>$<%= order.subtotal.toFixed(2) %></span>
                                </div>

                                <div class="summary-line">
                                    <span>Shipping:</span>
                                    <span>$<%= order.shipping.toFixed(2) %></span>
                                </div>

                                <div class="summary-line">
                                    <span>HST (13%):</span>
                                    <span>$<%= order.tax.toFixed(2) %></span>
                                </div>

                                <div class="summary-line grand-total">
                                    <strong>Total:</strong>
                                    <strong>$<%= order.total.toFixed(2) %></strong>
                                </div>

                                <div class="shipping-info">
                                    <h4>Shipping Information</h4>
                                    <p>Standard Shipping: 3-5 business days</p>
                                    <p>Tracking number will be emailed to you</p>
                                </div>

                                <div class="order-actions">
                                    <a href="/" class="btn btn-primary">Continue Shopping</a>
                                    <button onclick="window.print()" class="btn btn-secondary">Print Receipt</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </main>

        <%- include('partials/footer') %>
</body>

</html>